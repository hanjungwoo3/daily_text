<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="2dp"
    android:paddingBottom="8dp"
    android:gravity="fill">

    <!-- 날짜 및 이동 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal">

        <Button
            android:id="@+id/widget_prev_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;"
            android:minWidth="48dp"
            android:minHeight="0dp"
            android:padding="4dp"
            android:layout_weight="0"
            android:background="@android:color/transparent"
            android:textSize="18sp"
            android:textColor="@color/widget_text_primary" />

        <TextView
            android:id="@+id/widget_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="예: 6월 29일 일요일"
            android:textSize="14sp"
            android:textStyle="normal"
            android:gravity="center"
            android:textColor="@color/widget_text_primary"
            android:padding="0dp" />

        <Button
            android:id="@+id/widget_next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&gt;"
            android:minWidth="48dp"
            android:minHeight="0dp"
            android:padding="4dp"
            android:layout_weight="0"
            android:background="@android:color/transparent"
            android:textSize="18sp"
            android:textColor="@color/widget_text_primary" />
    </LinearLayout><ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 제목 (70% 투명 진한 녹색 배경) -->
            <TextView
                android:id="@+id/widget_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        android:textSize="14sp"
                android:textStyle="normal"
        android:textColor="@color/widget_text_primary"
                android:gravity="center"
                android:layout_marginBottom="0dp"
                android:padding="8dp"
                android:background="#4D388E3C" />

            <!-- 성서 읽기 범위 (투명한 회색 배경) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:padding="6dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="4dp"
                android:background="#4D808080">

                <TextView
                    android:id="@+id/widget_reading_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="(4일차) "
                    android:textSize="11sp"
                    android:textColor="@color/widget_text_secondary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/widget_reading_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="창세기 10:1-5; 역대기상 1:5-7..."
                    android:textSize="11sp"
                    android:textColor="@color/widget_text_secondary" />
            </LinearLayout>

            <!-- 본문 -->
    <TextView
        android:id="@+id/widget_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="오늘의 해설"
        android:textSize="13sp"
        android:textColor="@color/widget_text_secondary"
        android:gravity="fill_horizontal" />

        </LinearLayout>
    </ScrollView>

</LinearLayout> 